# ==============================================================================
# Kolaboree NG - Environment Configuration
# ==============================================================================
# Copy this file to .env and update with your secure values
# IMPORTANT: Change all passwords and secret keys before deploying to production!

# ------------------------------------------------------------------------------
# General Configuration
# ------------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=kolaboree-ng

# ------------------------------------------------------------------------------
# PostgreSQL Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_DB=kolaboree
POSTGRES_USER=kolaboree
POSTGRES_PASSWORD=CHANGEME_SECURE_POSTGRES_PASSWORD_MIN_32_CHARS

# ------------------------------------------------------------------------------
# Redis Cache Configuration
# ------------------------------------------------------------------------------
REDIS_PASSWORD=CHANGEME_SECURE_REDIS_PASSWORD

# ------------------------------------------------------------------------------
# OpenLDAP Configuration
# ------------------------------------------------------------------------------
LDAP_ADMIN_USERNAME=admin
LDAP_ADMIN_PASSWORD=CHANGEME_SECURE_LDAP_PASSWORD
LDAP_ROOT=kolaboree.local
LDAP_ADMIN_DN=cn=admin,dc=kolaboree,dc=local
LDAP_PORT=389
LDAPS_PORT=636

# ------------------------------------------------------------------------------
# Authentik IAM Configuration
# ------------------------------------------------------------------------------
# Secret key must be at least 50 characters
AUTHENTIK_SECRET_KEY=CHANGEME_SUPER_SECRET_AUTHENTIK_KEY_MINIMUM_50_CHARACTERS_PLEASE
AUTHENTIK_ERROR_REPORTING=false
AUTHENTIK_PORT_HTTP=9000
AUTHENTIK_PORT_HTTPS=9443

# ------------------------------------------------------------------------------
# Application Ports
# ------------------------------------------------------------------------------
# Backend API (FastAPI)
BACKEND_PORT=8000

# Frontend (React)
FRONTEND_PORT=3000

# Nginx Reverse Proxy
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Apache Guacamole Remote Desktop
GUACAMOLE_PORT=8080

# ------------------------------------------------------------------------------
# Cloud Provider Credentials (Optional - for testing)
# ------------------------------------------------------------------------------
# These are optional and can be configured through the UI
# GCP_SERVICE_ACCOUNT_JSON=
# LXD_ENDPOINT=https://localhost:8443
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# ------------------------------------------------------------------------------
# Tailscale VPN Configuration
# ------------------------------------------------------------------------------
# Required for secure communication with remote cloud providers (LXD, etc.)
# Generate an auth key at: https://login.tailscale.com/admin/settings/keys
# IMPORTANT: This project requires Tailscale to connect to remote LXD servers
TAILSCALE_AUTH_KEY=
